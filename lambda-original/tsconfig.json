{
  "exclude": ["build", "node_modules", "jest", "jest.config.js", "dist"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "../../backend/src/*"],
      "@/infinity/*": ["../../backend/src/*"]
    },
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": false,
    "outDir": "build",
    "resolveJsonModule": false,
    "strict": false,
    "target": "ES2018",
    "skipLibCheck": true,
    "types": ["node", "aws-lambda", "jest"]
  }
}
